import fetch from "node-fetch";

const LEAGUE_ID = "378844"; // your league ID
const TEAM_NAME = "Love Thy Nabers";

export default async function handler(req, res) {
  try {
    // 1. Get an access token from Yahoo using refresh token
    const tokenResponse = await fetch("https://api.login.yahoo.com/oauth2/get_token", {
      method: "POST",
      headers: {
        "Content-Type": "application/x-www-form-urlencoded",
        "Authorization": "Basic " + Buffer.from(
          process.env.YAHOO_CLIENT_ID + ":" + process.env.YAHOO_CLIENT_SECRET
        ).toString("base64")
      },
      body: new URLSearchParams({
        grant_type: "refresh_token",
        refresh_token: process.env.YAHOO_REFRESH_TOKEN
      })
    });

    const tokenData = await tokenResponse.json();
    const accessToken = tokenData.access_token;

    // 2. Fetch league standings
    const standingsResponse = await fetch(`https://fantasysports.yahooapis.com/fantasy/v2/league/${LEAGUE_ID}/standings?format=json`, {
      headers: {
        Authorization: `Bearer ${accessToken}`
      }
    });
    const standingsData = await standingsResponse.json();

    // 3. Extract teams and scores
    const teams = standingsData.fantasy_content.league[1].standings[0].teams;
    const sortedTeams = teams.sort((a, b) => b.team_points.total - a.team_points.total);

    // 4. Determine if Jordan is playoff-bound
    const jordan = teams.find(team => team.name === TEAM_NAME);
    const sixthPlaceScore = sortedTeams[5].team_points.total; // 6th place by points
    const playoffStatus = (jordan.team_points.total >= sixthPlaceScore) ? "YES" : "NO";

    // 5. Respond
    res.status(200).json({
      message: `Jordan is ${jordan.record}. Against all odds (suck it Mike), heâ€™s playoff-bound.`,
      playoffStatus
    });

  } catch (err) {
    console.error(err);
    res.status(500).json({ error: "Failed to fetch standings" });
  }
}

